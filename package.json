{
    "name": "blog",
    "version": "1.0.0",
    "description": "Mais um blog sobre desenvolvimento de software",
    "author": "Walker <walker@praiseweb.com.br>",
    "private": true,
    "scripts": {
        "dev": "vitepress",
        "build": "vitepress build && node ./.vitepress/genFeed",
        "serve": "vitepress serve",
        "lint": "eslint --ext .js,.vue .vitepress"
    },
    "devDependencies": {
        "eslint": "^7.22.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-vue": "^7.7.0",
        "feed": "^4.2.2",
        "gray-matter": "^4.0.2",
        "vite": "^2.1.2",
        "vite-plugin-windicss": "^0.9.2",
        "vitepress": "^0.12.2",
        "windicss": "^2.5.1"
    },
    "eslintConfig": {
        "ignorePatterns": ".vitepress/dist",
        "env": {
            "browser": true,
            "es2021": true
        },
        "extends": [
            "plugin:vue/vue3-recommended",
            "airbnb-base"
        ],
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "rules": {
            "import/no-extraneous-dependencies": [
                "error",
                {
                    "devDependencies": [
                        "./vite.config.js",
                        "./windicss.config.js",
                        "./.vitepress/**/*"
                    ]
                }
            ],
            "no-unused-vars": "off"
        }
    },
    "dependencies": {
        "@heroicons/vue": "^1.0.0",
        "@vueuse/core": "^4.6.3",
        "vue": "3"
    }
}
